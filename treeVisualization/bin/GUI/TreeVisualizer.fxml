<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="768.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.TreeVisualizerController">
   <bottom>
      <HBox prefHeight="40.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Speed">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </Label>
            <Slider fx:id="sliderSpeed">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <HBox.margin>
                  <Insets bottom="5.0" right="5.0" top="5.0" />
               </HBox.margin>
            </Slider>
            <ToolBar>
              <items>
                  <Button fx:id="btnBackward" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#stepBackward" text="Step Backward" />
                <Button fx:id="btnPlay" mnemonicParsing="false" onAction="#btnPlayPressed" text="Play" />
                  <Button fx:id="btnPause" layoutX="108.0" layoutY="10.0" mnemonicParsing="false" onAction="#btnPausePressed" text="Pause" />
                  <Button fx:id="btnForward" layoutX="88.0" layoutY="13.0" mnemonicParsing="false" onAction="#stepForward" text="Step Forward" />
              </items>
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ToolBar>
         </children>
      </HBox>
   </bottom>
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Pane fx:id="treeVisualizer" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
   <children>
      <Label layoutX="10.0" layoutY="10.0" text="Tree Visualizer: Chưa có dữ liệu, vui lòng chọn thao tác." />
   </children>
</Pane>
            
         </children>
      </VBox>
   </center>
   <top>
      <VBox prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Tree Visualizer">
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <ToolBar prefHeight="40.0" prefWidth="200.0">
              <items>
                <Button fx:id="btnGenericTree" mnemonicParsing="false" onAction="#selectGenericTree" text="Generic Tree" />
                  <Button fx:id="btnBinaryTree" layoutX="10.0" layoutY="13.0" mnemonicParsing="false" onAction="#selectBinaryTree" text="Binary Tree" />
                  <Button fx:id="btnBalancedTree" layoutX="97.0" layoutY="13.0" mnemonicParsing="false" onAction="#selectBalancedTree" text="Balanced Tree" />
                  <Button fx:id="btnBalancedBinaryTree" layoutX="176.0" layoutY="13.0" mnemonicParsing="false" onAction="#selectBalancedBinaryTree" text="Balanced Binary Tree" />
                  <Button fx:id="btnHelp" layoutX="270.0" layoutY="13.0" mnemonicParsing="false" onAction="#btnHelpPressed" text="Help" />
                  <Button fx:id="btnQuit" layoutX="400.0" layoutY="13.0" mnemonicParsing="false" onAction="#btnQuitPressed" text="Quit" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </top>
   <right>
      <Pane fx:id="pseudoCode" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
   <children>
      <Label layoutX="10.0" layoutY="10.0" text="PseudoCode sẽ hiển thị tại đây." />
   </children>
</Pane>

   </right>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#btnCreatePressed" text="Create" />
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnInsertPressed" text="Insert" />
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeletePressed" text="Delete" />
            <Button fx:id="btnUpdate" mnemonicParsing="false" onAction="#btnUpdatePressed" text="Update" />
            <Button fx:id="btnTraverse" mnemonicParsing="false" onAction="#btnTraversePressed" text="Traverse" />
            <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#btnSearchPressed" text="Search" />
         </children>
      </VBox>
   </left>
</BorderPane>
